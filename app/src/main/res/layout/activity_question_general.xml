<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".QuestionGeneralActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20sp"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/question1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/blomberg"
                        android:lineHeight="40dp"
                        android:padding="10dp"
                        android:text="In which Italian city can you find the Colosseum?"
                        android:textColor="@color/white"
                        android:textSize="23dp" />

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/answer1_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="Venice"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/answer1_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="Rome"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/answer1_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="Naples"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/answer1_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="Milan"
                            android:textColor="@color/white" />


                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20sp"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/question2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/blomberg"
                        android:lineHeight="40dp"
                        android:padding="10dp"
                        android:text="In the TV show New Girl, which actress plays Jessica Day?"
                        android:textColor="@color/white"
                        android:textSize="23dp" />

                    <RadioGroup
                        android:id="@+id/radioGroup2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/answer2_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="Zooey Deschanel"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/answer2_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="Kaley Cuoco"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/answer2_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="Jennifer Aniston"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/answer2_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="Alyson Hannigan"
                            android:textColor="@color/white" />


                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20sp"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/question3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/blomberg"
                        android:padding="10dp"
                        android:text="What is the largest canyon in the world?"
                        android:textColor="@color/white"
                        android:textSize="23dp" />

                    <RadioGroup
                        android:id="@+id/radioGroup3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/answer3_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="Verdon Gorge, France"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/answer3_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="King’s Canyon, Australia"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/answer3_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="Grand Canyon, USA"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/answer3_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="Fjaðrárgljúfur Canyon, Iceland"
                            android:textColor="@color/white" />


                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20sp"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/question4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/blomberg"
                        android:padding="10dp"
                        android:text="How long is the border between the United States and Canada?"
                        android:textColor="@color/white"
                        android:textSize="23dp" />

                    <RadioGroup
                        android:id="@+id/radioGroup4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/answer4_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="3,525 miles"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/answer4_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="4,525 miles"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/answer4_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="5,525 miles"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/answer4_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="6,525 miles"
                            android:textColor="@color/white" />


                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20sp"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/question5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/blomberg"
                        android:padding="10dp"
                        android:text="What is the largest active volcano in the world?"
                        android:textColor="@color/white"
                        android:textSize="23dp" />

                    <RadioGroup
                        android:id="@+id/radioGroup5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/answer5_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="Mount Etna"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/answer5_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="Mount Vesuvius"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/answer5_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="Mouna Loa"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/answer5_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="10dp"
                            android:text="Mount Batur"
                            android:textColor="@color/white" />


                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/submitBtn"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:fontFamily="@font/blomberg"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>